<Page x:ConnectionId='1'
    x:Class="PiStudio.Win10.UI.Pages.DrawingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiStudio.Win10.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2'                                                                                                                      >
        <SplitView x:ConnectionId='3' Name="MainMenu" DisplayMode="CompactOverlay" IsPaneOpen="False" CompactPaneLength="50"
                   OpenPaneLength="150">
            <SplitView.Pane>
                <Grid x:ConnectionId='4'                                                                                                                           
                            x:Name="ItemsWrapper">
                    <Button x:ConnectionId='5' x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                            Width="50" Height="50"                         VerticalAlignment="Top"
                                                                                                                                                      
                                                                                                                                                       />
                    <local:MenuItem x:ConnectionId='6' x:Name="HomeItem"                                                                                       
                                    Symbol="Home"                                                          Height="50" Margin="0,50,0,0" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='7' x:Name="FilterItem"                                                                                       
                                    Symbol="Filter"                                                          Height="50" Margin="0,100,0,0" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='8' x:Name="BrightnessItem"                                                                                       
                                    Symbol="OutlineStar"                                                          Height="50" Margin="0, 150,0,0" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='9' x:Name="DrawItem"                                                                                       
                                    Symbol="Edit" IsSelected="True"                                                          Height="50" Margin="0,200,0,0" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='10' x:Name="SaveItem"                                                                                       
                                    Symbol="Save"                                                          Height="50" Margin="0,250,0,0" VerticalAlignment="Top" 
                                    IsSelectionEnabled="True"/>
                    <local:MenuItem x:ConnectionId='11' x:Name="SpeakItem"                                                                                       
                                    Symbol="Microphone"                                                          IsSelectionEnabled="False" Height="50" Margin="0,300,0,0" VerticalAlignment="Top"/>
                    <ProgressRing x:ConnectionId='12' x:Name="Progress" Width="31" Height="31" Margin="10,260" VerticalAlignment="Top" HorizontalAlignment="Left"
                                                                                                                                                              />
                    <Grid Background="Gray" Height="1" VerticalAlignment="Bottom" Margin="0,0,0,50" Width="150" BorderThickness="0"/>
                    <local:MenuItem x:ConnectionId='13' x:Name="SettingsItem"                                                                                       
                                    Symbol="Setting"                                                         IsSelectionEnabled="True" Height="50" VerticalAlignment="Bottom"/>

                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <ProgressRing x:ConnectionId='14'                                                                                                                            
                                  Name="PRing" Height="125" Width="125" VerticalAlignment="Center" HorizontalAlignment="Center"
                                  Grid.Row="2" />
                    <Grid x:ConnectionId='15' Grid.Row="0"                                                                                                                                >
                        <TextBlock x:ConnectionId='20' Margin="15,0"                                              FontFamily="Segoe UI" FontSize="20" VerticalAlignment="Center" 
                                                                                                                                                     
                               HorizontalAlignment="Left" FontWeight="SemiBold"/>
                        <local:PiBar x:ConnectionId='21'                                                                             HorizontalAlignment="Right"
                                                                                                x:Name="Bar" Width="277"/>
                    </Grid>
                    <Grid x:ConnectionId='16' Height="50" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.Row="1"
                                                                                                                                                         >
                        <local:Toolbox x:ConnectionId='19' IsShadowEnabled="False" HorizontalAlignment="Left" x:Name="ToolBox"
                                                                                                     
                                                                                              Margin="5,0,0,0"/>
                    </Grid>
                    <Grid Grid.Row="2" Margin="4">
                        <local:PiCanvas x:ConnectionId='17' x:Name="DrawingCanvas" Canvas.ZIndex="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BrushColor="Black" />
                        <Image x:ConnectionId='18' x:Name="ImgPresenter" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform" Canvas.ZIndex="1"/>
                    </Grid>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

