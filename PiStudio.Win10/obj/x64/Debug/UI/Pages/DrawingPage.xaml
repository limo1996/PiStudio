<Page x:ConnectionId='1'
    x:Class="PiStudio.Win10.UI.Pages.DrawingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiStudio.Win10.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2'                                                                                                                      >
        <SplitView x:ConnectionId='3' Name="MainMenu" DisplayMode="CompactOverlay" IsPaneOpen="False" CompactPaneLength="50"
                   OpenPaneLength="150">
            <SplitView.Pane>
                <Grid x:ConnectionId='4'                                                                                                                           
                            x:Name="ItemsWrapper">
                    <Button x:ConnectionId='5' x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                            Width="50" Height="50"                         VerticalAlignment="Top"
                                                                                                                                                      
                                                                                                                                                       />
                    <local:MenuItem x:ConnectionId='6' x:Name="HomeItem"                                                                                       
                                    Symbol="Home"                                                          Height="50" Margin="0,50" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='7' x:Name="FilterItem"                                                                                       
                                    Symbol="Filter"                                                          Height="50" Margin="0,100" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='8' x:Name="BrightnessItem"                                                                                       
                                    Symbol="OutlineStar"                                                          Height="50" Margin="0, 150" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='9' x:Name="DrawItem"                                                                                       
                                    Symbol="Edit" IsSelected="True"                                                          Height="50" Margin="0,200" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='10' x:Name="SaveItem"                                                                                       
                                    Symbol="Save"                                                          Height="50" Margin="0,250" VerticalAlignment="Top" IsSelectionEnabled="False"/>
                    <local:MenuItem x:ConnectionId='11' x:Name="SpeakItem"                                                                                       
                                    Symbol="Microphone"                                                          IsSelectionEnabled="False" Height="50" Margin="0,300" VerticalAlignment="Top"/>

                    <Grid Background="Gray" Height="1" VerticalAlignment="Bottom" Margin="0,0,0,50" Width="150" BorderThickness="0"/>
                    <local:MenuItem x:ConnectionId='12' x:Name="SettingsItem"                                                                                       
                                    Symbol="Setting"                                                         IsSelectionEnabled="True" Height="50" VerticalAlignment="Bottom"/>

                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid x:ConnectionId='13' Height="50" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.Row="0"
                                                                                                                                               >
                        <local:Toolbox x:ConnectionId='16' IsShadowEnabled="False" HorizontalAlignment="Right" x:Name="ToolBox"
                                                                                                     
                                                                                             />
                    </Grid>
                    <Grid Grid.Row="1">
                        <local:PiCanvas x:ConnectionId='14' x:Name="DrawingCanvas" Canvas.ZIndex="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BrushColor="Black" />
                        <Image x:ConnectionId='15' x:Name="ImgPresenter" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform" Canvas.ZIndex="1"/>
                    </Grid>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

