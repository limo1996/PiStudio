<Page x:ConnectionId='1'
    x:Class="PiStudio.Win10.UI.Pages.BrightnessPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiStudio.Win10.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2'                                                                                                                      >
        <SplitView x:ConnectionId='3' Name="MainMenu" DisplayMode="CompactOverlay" IsPaneOpen="False" CompactPaneLength="50"
                   OpenPaneLength="150">
            <SplitView.Pane>
                <Grid x:ConnectionId='4'                                                                                                                           
                            x:Name="ItemsWrapper">
                    <Button x:ConnectionId='5' x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                            Width="50" Height="50"                         VerticalAlignment="Top"
                                                                                                                                                      
                                                                                                                                                       />
                    <local:MenuItem x:ConnectionId='6' x:Name="HomeItem"                                                                                       
                                    Symbol="Home"                                                          Height="50" Margin="0,50" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='7' x:Name="FilterItem"                                                                                       
                                    Symbol="Filter"                                                          Height="50" Margin="0,100" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='8' x:Name="BrightnessItem"                                                                                       
                                    Symbol="OutlineStar" IsSelected="True"                                                          Height="50" Margin="0, 150" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='9' x:Name="DrawItem"                                                                                       
                                    Symbol="Edit"                                                          Height="50" Margin="0,200" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='10' x:Name="SaveItem"                                                                                       
                                    Symbol="Save"                                                          Height="50" Margin="0,250" VerticalAlignment="Top" IsSelectionEnabled="False"/>
                    <local:MenuItem x:ConnectionId='11' x:Name="SpeakItem"                                                                                       
                                    Symbol="Microphone"                                                          IsSelectionEnabled="False" Height="50" Margin="0,300" VerticalAlignment="Top"/>

                    <Grid Background="Gray" Height="1" VerticalAlignment="Bottom" Margin="0,0,0,50" Width="150" BorderThickness="0"/>
                    <local:MenuItem x:ConnectionId='12' x:Name="SettingsItem"                                                                                       
                                    Symbol="Setting"                                                         IsSelectionEnabled="True" Height="50" VerticalAlignment="Bottom"/>

                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid x:ConnectionId='13' Name="GridContent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*">
                        </RowDefinition>
                        <RowDefinition Height="*">
                        </RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Background="Transparent"
                          Grid.Row="0">
                        <ProgressRing x:ConnectionId='18' Name="PRing" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                      Height="125" Width="125" />
                        <Grid x:ConnectionId='19' Name="Wrapper">
                            <Image x:ConnectionId='20' Margin="10,30,10,15" Name="ImageContent" Stretch="Uniform" Canvas.ZIndex="5"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                                                         />
                            <Rectangle x:ConnectionId='21' Fill="White" Name="BackgroundColor" Canvas.ZIndex="10" Opacity="0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="0, 15, 0, 0"/>
                        </Grid>
                    </Grid>
                    <Grid x:ConnectionId='14' Grid.Row="1" Name="LowerPanel">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:ConnectionId='15'                                                                                                                       
                                                                                             HorizontalAlignment="Right" 
                                   VerticalAlignment="Center" Grid.Row="1" FontSize="40" 
                                   FontFamily="Segoe UI" FontWeight="Light"
                                   Padding="0,0,30,0" Name="BrightnessText"/>
                        <Slider x:ConnectionId='16' x:Name="BrightnessSlider" HorizontalAlignment="Center" Grid.Row="1" 
                                VerticalAlignment="Center" Width="400" Minimum="-100" Maximum="100" Value="0"
                                Grid.Column="1"                                                                                                                      />
                        <TextBlock x:ConnectionId='17' Name="SliderValue" VerticalAlignment="Center" HorizontalAlignment="Left"
                                   Padding="30,0,0,0" Text="0" FontFamily="Segoe UI" FontWeight="Light"
                                   FontSize="40" Grid.Column="2"                                                                                                                      />
                    </Grid>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

